<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.osthus.ambeth</groupId>
	<artifactId>jAmbeth</artifactId>
	<version>2.0.X-SNAPSHOT</version>
	<packaging>pom</packaging>

	<parent>
		<groupId>de.osthus</groupId>
		<artifactId>osthus-pom</artifactId>
		<version>0.0.12</version>
	</parent>

	<properties>
		<jambeth.project.test>jAmbeth.Test</jambeth.project.test>
		<jambeth.path.test>${project.basedir}/../${jambeth.project.test}</jambeth.path.test>
		<checkstyle.severity>warning</checkstyle.severity>
		<checkstyle.tabwidth>4</checkstyle.tabwidth>
		<checkstyle.LineLength.max>160</checkstyle.LineLength.max>
	</properties>

	<modules>
		<module>jAmbeth.Bytecode</module>
		<module>jAmbeth.Cache</module>
		<module>jAmbeth.Cache.Bytecode</module>
		<module>jAmbeth.Cache.DataChange</module>
		<module>jAmbeth.Cache.Server</module>
		<module>jAmbeth.Cache.Stream</module>
		<module>jAmbeth.DataChange</module>
		<module>jAmbeth.DataChange.Persistence</module>
		<module>jAmbeth.Event</module>
		<module>jAmbeth.Event.DataChange</module>
		<module>jAmbeth.Event.Server</module>
		<module>jAmbeth.Examples</module>
		<module>jAmbeth.Filter</module>
		<module>jAmbeth.IoC</module>
		<module>jAmbeth.Job</module>
		<module>jAmbeth.Job.Cron4j</module>
		<module>jAmbeth.Log</module>
		<module>jAmbeth.Mapping</module>
		<module>jAmbeth.Merge</module>
		<module>jAmbeth.Merge.Bytecode</module>
		<module>jAmbeth.Merge.Server</module>
		<module>jAmbeth.Persistence</module>
		<module>jAmbeth.Persistence.JDBC</module>
		<module>jAmbeth.Persistence.Oracle11</module>
		<module>jAmbeth.Platform</module>
		<module>jAmbeth.Privilege</module>
		<module>jAmbeth.Privilege.Server</module>
		<module>jAmbeth.Query</module>
		<module>jAmbeth.Query.InMemory</module>
		<module>jAmbeth.Query.JDBC</module>
		<module>jAmbeth.Security</module>
		<module>jAmbeth.Security.Server</module>
		<module>jAmbeth.Sensor</module>
		<module>jAmbeth.Server.HelloWorld</module>
		<module>jAmbeth.Server.REST</module>
		<module>jAmbeth.Service</module>
		<module>jAmbeth.SOAP</module>
		<module>jAmbeth.Stream</module>
		<module>jAmbeth.Test</module>
		<module>jAmbeth.TestUtil</module>
		<module>jAmbeth.Util</module>
		<module>jAmbeth.Xml</module>
		<module>jAmbeth.Xml.File</module>
	</modules>

	<dependencies>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>de.osthus.ambeth</groupId>
				<artifactId>jAmbeth.TestUtil</artifactId>
				<version>2.0.X-SNAPSHOT</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>de.osthus.ambeth</groupId>
				<artifactId>jAmbeth.TestUtil</artifactId>
				<version>2.0.X-SNAPSHOT</version>
				<type>test-jar</type>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<sourceDirectory>${project.basedir}/src</sourceDirectory>
		<testSourceDirectory>${project.basedir}/test</testSourceDirectory>
		<resources>
			<resource>
				<directory>${project.basedir}/src2/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>${project.basedir}/test</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.3</version>
			</plugin>
		</plugins>
	</reporting>

	<profiles>
		<profile>
			<!-- Excludes long-running tests for normal builds. Deactivate for nightly 
				builds. -->
			<id>normal-tests</id>
			<activation>
				<property>
					<name>!nightly-build</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<excludes>
								<exclude>**/BigStatementTest.java</exclude>
								<exclude>**/QueryMassdataTest.java</exclude>
								<exclude>**/isin/QueryIsInMassdataTest.java</exclude>
								<exclude>**/ClassTupleExtendableContainerPerformanceTest.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- This Profile is active when the build is executed on Jenkins CI Build 
			Server. It activates code metrics and javadoc generation -->
		<profile>
			<id>jenkins</id>
			<activation>
				<property>
					<name>env.JENKINS_HOME</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-pmd-plugin</artifactId>
						<version>3.0.1</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>pmd</goal>
									<goal>cpd</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.9.1</version>
						<configuration>
							<stylesheet>maven</stylesheet>
						</configuration>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>2.2.1</version>
						<executions>
							<execution>
								<id>attach-sources</id>
								<phase>verify</phase>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jar-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								<goals>
									<goal>test-jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

<!-- 					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-checkstyle-plugin</artifactId>
						<version>2.11</version>
						<executions>
							<execution>
								<phase>package</phase>
								<configuration>
									<configLocation>${jambeth.path.test}/checkstyle_checks.xml</configLocation>
								</configuration>
								<goals>
									<goal>checkstyle</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
 -->					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>findbugs-maven-plugin</artifactId>
						<version>2.5.3</version>
						<executions>
							<execution>
								<phase>package</phase>
								<configuration>
									<excludeFilterFile>${jambeth.path.test}/findbugs_exclude_checks.xml</excludeFilterFile>
								</configuration>
								<goals>
									<goal>findbugs</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<!-- <plugin> <groupId>org.codehaus.mojo</groupId> <artifactId>cobertura-maven-plugin</artifactId> 
						<version>2.6</version> <executions> <execution> <phase>package</phase> <goals> 
						<goal>cobertura</goal> </goals> </execution> </executions> </plugin> -->
				</plugins>
			</build>
		</profile>
	</profiles>

</project>