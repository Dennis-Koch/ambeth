<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.osthus.de/ambeth/ambeth_orm_1_2">

	<entity class="de.osthus.ambeth.persistence.xml.model.Employee">
		<sequence-generator name="EMPLOYEE_SEQU" />
		<attributes>
			<id name="Id" />
			<version name="Version" />
			<basic name="CreatedOn" created-on="true" />
			<basic name="CreatedBy" created-by="true" />
			<basic name="UpdatedOn" updated-on="true" />
			<basic name="UpdatedBy" updated-by="true" />
			<basic name="Car.Make">
				<column name="CAR_MAKE" />
			</basic>
			<basic name="Car.Model">
				<column name="CAR_MODEL" />
			</basic>
			<basic name="Name" alternate-id="true" />
			<to-one name="Boat" target-entity="de.osthus.ambeth.persistence.xml.model.Boat" do-delete="true">
				<join-table name="EMPLOYEE">
					<join-column name="BOAT" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-one>
			<to-one name="PrimaryAddress" target-entity="de.osthus.ambeth.persistence.xml.model.Address"
				do-delete="true" may-delete="false">
				<join-table name="EMPLOYEE">
					<join-column name="PRIMARY_ADDRESS_ID" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-one>
			<to-many name="OtherAddresses" target-entity="de.osthus.ambeth.persistence.xml.model.Address"
				do-delete="true" may-delete="false">
				<join-table name="ADDRESS">
					<join-column name="RESIDENT" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-many>
			<to-one name="PrimaryProject" target-entity="de.osthus.ambeth.persistence.xml.model.Project"
				do-delete="false" may-delete="false">
				<join-table name="EMPLOYEE">
					<join-column name="PRIMARY_PROJECT" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-one>
			<to-many name="AllProjects" target-entity="de.osthus.ambeth.persistence.xml.model.Project"
				do-delete="false" may-delete="false">
				<join-table name="LINK_EMPLOYEE_PROJECT">
					<join-column name="LEFT_ID" />
					<inverse-join-column name="RIGHT_ID" />
				</join-table>
			</to-many>
		</attributes>
	</entity>

	<entity class="de.osthus.ambeth.persistence.xml.model.Address">
		<attributes>
			<id name="Id" />
			<version name="Version" />
			<basic name="CreatedOn" created-on="true" />
			<basic name="CreatedBy" created-by="true" />
			<basic name="UpdatedOn" updated-on="true" />
			<basic name="UpdatedBy" updated-by="true" />
			<to-one name="Resident" target-entity="de.osthus.ambeth.persistence.xml.model.Employee"
				do-delete="false" may-delete="true">
				<join-table name="EMPLOYEE">
					<join-column name="PRIMARY_ADDRESS_ID" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-one>
		</attributes>
	</entity>

	<entity class="de.osthus.ambeth.persistence.xml.model.Project">
		<attributes>
			<id name="Id" />
			<version name="Version" />
			<to-many name="Employees" target-entity="de.osthus.ambeth.persistence.xml.model.Employee"
				do-delete="false" may-delete="false">
				<join-table name="EMPLOYEE">
					<join-column name="PRIMARY_PROJECT" />
					<inverse-join-column name="ID" />
				</join-table>
			</to-many>
			<basic name="CreatedOn" created-on="true" />
			<basic name="CreatedBy" created-by="true" />
			<basic name="UpdatedOn" updated-on="true" />
			<basic name="UpdatedBy" updated-by="true" />
		</attributes>
	</entity>

	<entity class="de.osthus.ambeth.persistence.xml.model.Boat">
		<attributes>
			<id name="Id" />
			<version name="Version" />
			<basic name="CreatedOn" created-on="true" />
			<basic name="CreatedBy" created-by="true" />
			<basic name="UpdatedOn" updated-on="true" />
			<basic name="UpdatedBy" updated-by="true" />
			<basic name="Name" />
		</attributes>
	</entity>

</entity-mappings>
