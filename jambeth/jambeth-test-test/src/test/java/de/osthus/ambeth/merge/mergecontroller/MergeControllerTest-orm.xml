<?xml version="1.0" encoding="UTF-8"?>
<or-mappings xmlns="http://osthus.de/ambeth/ambeth_orm_2_0">

	<link-mappings>
		<!-- cascade-delete="none | left | right | both", default "none" -->
		<link alias="Parent-Child" source="PARENT_CHILD_FK1" cascade-delete="right" />
		<link alias="Parent-OtherChildren" source="CHILD_PARENT_FK2" cascade-delete="left" />
		<link alias="Parent-OtherChildren2" source="CHILD_PARENT_FK3" cascade-delete="left" />
		<independent-link alias="ExternalParent-ExternalChild" left="de.osthus.ambeth.merge.mergecontroller.ExternalParent" right="de.osthus.ambeth.merge.mergecontroller.ExternalChild" cascade-delete="right" />
	</link-mappings>

	<entity-mappings>

		<entity class="de.osthus.ambeth.merge.mergecontroller.Parent">
			<attributes>
				<relation name="Child" link="Parent-Child" />
				<relation name="OtherChildren" link="Parent-OtherChildren" />
				<relation name="OtherChildren2" link="Parent-OtherChildren2" />
			</attributes>
		</entity>

		<entity class="de.osthus.ambeth.merge.mergecontroller.Child">
		</entity>
		
		<external-entity class="de.osthus.ambeth.merge.mergecontroller.ExternalParent">
			<attributes>
				<id name="Id" />
				<version name="Version" />
				<relation name="Children" link="ExternalParent-ExternalChild" />
			</attributes>
		</external-entity>
		
		<external-entity class="de.osthus.ambeth.merge.mergecontroller.ExternalChild">
			<attributes>
				<id name="Id" />
				<version name="Version" />
			</attributes>
		</external-entity>
	</entity-mappings>
</or-mappings>