<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>random-user-script</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>de.osthus.maven</groupId>
		<artifactId>random-user-pom</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<properties>
		<jambeth.version>2.1.138</jambeth.version>
	</properties>
	
	<repositories>
		<repository>
			<id>thirdparty</id>
			<url>http://nexus/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>
	
	<dependencies>
		<dependency>
			<groupId>de.osthus.ambeth</groupId>
			<artifactId>jambeth-information-bus-with-persistence</artifactId>
			<version>${jambeth.version}</version>
			<type>pom</type>
		</dependency>

		<dependency>
			<groupId>de.osthus.ambeth</groupId>
			<artifactId>jambeth-persistence-oracle11</artifactId>
			<version>${jambeth.version}</version>
		</dependency>

		<dependency>
			<groupId>de.osthus.ambeth</groupId>
			<artifactId>jambeth-testutil-persistence</artifactId>
			<version>${jambeth.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>de.osthus.ambeth</groupId>
			<artifactId>jambeth-persistence</artifactId>
			<version>${jambeth.version}</version>
			<classifier>tests</classifier>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<artifactSet>
						<includes>
							<includes>de.osthus.ambeth</includes>
						</includes>
					</artifactSet>
					<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>