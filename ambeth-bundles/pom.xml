<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.osthus.ambeth</groupId>
	<artifactId>jambeth-bundles</artifactId>
	<packaging>pom</packaging>
	<version>2.1.X-SNAPSHOT</version>

	<parent>
		<groupId>de.osthus</groupId>
		<artifactId>osthus-pom</artifactId>
		<version>0.0.21-SNAPSHOT</version>
	</parent>

	<properties>
		<build.number>X-SNAPSHOT</build.number>
	</properties>

	<modules>
		<module>ambeth-core</module>
		<module>ambeth-core-test</module>
		<module>ambeth-information-bus</module>
		<module>ambeth-information-bus-test</module>
		<module>ambeth-information-bus-with-persistence</module>
		<module>ambeth-information-bus-with-persistence-test</module>
		<module>ambeth-server</module>
		<module>ambeth-server-test</module>
		<module>ambeth-server-with-persistence</module>
		<module>ambeth-server-with-persistence-test</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<appendAssemblyId>false</appendAssemblyId>
					</configuration>
					<!-- <executions> <execution> <id>make-assembly</id> <phase>package</phase> 
						<goals> <goal>single</goal> </goals> </execution> </executions> -->
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
		<!-- Location of the osthus-pom -->
		<repository>
			<id>osthus-releases</id>
			<url>http://maven.osthus.de/nexus/content/repositories/osthus-releases/</url>
		</repository>

		<!-- Locally hosted third-party libs -->
		<repository>
			<id>thirdparty</id>
			<url>http://maven.osthus.de/nexus/content/repositories/thirdparty</url>
		</repository>
	</repositories>

</project>